---
import { buttonVariants } from '@/components/ui/button';
import { FileText, LayoutDashboard, Github, BookOpen } from 'lucide-react';
import '@/styles/globals.css'

const repoLink = 'https://github.com/tuusuario/sii-facturacion-go';
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme');
    }
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  };
  const isDark = getThemePreference() === 'dark';
  document.documentElement.classList[isDark ? 'add' : 'remove']('dark');

  if (typeof localStorage !== 'undefined') {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
    observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
  }
</script>

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>SII Facturacion - Sistema de Facturacion Electronica Chile</title>
  </head>
  <body>
    <div class="flex flex-col items-center justify-center gap-4 py-20 px-8">
      <div class="flex items-center gap-3 mb-4">
        <FileText className="h-12 w-12 text-primary" />
      </div>
      <h1 class="text-5xl font-bold text-center">SII Facturacion</h1>
      <p class="text-xl text-muted-foreground text-center max-w-2xl">
        Sistema de Facturacion Electronica para Chile. Genera DTEs, gestiona folios CAF y envia documentos al SII.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8 max-w-3xl w-full">
        <div class="p-6 border rounded-lg">
          <h3 class="font-semibold mb-2">Facturas y Boletas</h3>
          <p class="text-sm text-muted-foreground">Genera facturas electronicas, boletas y notas de credito/debito.</p>
        </div>
        <div class="p-6 border rounded-lg">
          <h3 class="font-semibold mb-2">Gestion de Folios</h3>
          <p class="text-sm text-muted-foreground">Administra tus CAFs y controla el uso de folios por tipo de documento.</p>
        </div>
        <div class="p-6 border rounded-lg">
          <h3 class="font-semibold mb-2">Envio al SII</h3>
          <p class="text-sm text-muted-foreground">Envia documentos y consulta el estado de tus envios en tiempo real.</p>
        </div>
      </div>

      <div class="flex flex-wrap gap-4 mt-8 justify-center">
        <a class={buttonVariants({ size: 'lg' })} href="/admin">
          <LayoutDashboard className="mr-2 h-5 w-5" /> Ir al Panel Admin
        </a>
        <a class={buttonVariants({ variant: 'outline', size: 'lg' })} href="/ayuda">
          <BookOpen className="mr-2 h-5 w-5" /> Guia de Inicio
        </a>
        <a class={buttonVariants({ variant: 'ghost', size: 'lg' })} href={repoLink}>
          <Github className="mr-2 h-5 w-5" /> Ver en GitHub
        </a>
      </div>

      <div class="mt-12 text-sm text-muted-foreground">
        <p>Ambientes soportados: Certificacion y Produccion SII</p>
      </div>
    </div>
  </body>
</html>
