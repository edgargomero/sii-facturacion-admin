---
/**
 * Pagina de Login
 * Si el usuario ya esta autenticado, redirigir a /admin
 */
import '@/styles/globals.css';
import { LoginForm } from '@/components/auth/login-form';
import { FileText } from 'lucide-react';
import { parseSessionCookies } from '@/lib/auth/cookies';

// Verificar si ya esta autenticado
const cookieHeader = Astro.request.headers.get('Cookie');
const { accessToken } = parseSessionCookies(cookieHeader);

// Si hay token, redirigir a admin (el middleware validara)
if (accessToken) {
  return Astro.redirect('/admin');
}

// Obtener parametros de URL
const returnUrl = Astro.url.searchParams.get('returnUrl') || '/admin';
const error = Astro.url.searchParams.get('error');
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme');
    }
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  };
  const isDark = getThemePreference() === 'dark';
  document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
</script>

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Iniciar Sesion - SII Facturacion</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <div class="flex-1 flex items-center justify-center p-4">
      <div class="w-full max-w-md">
        <div class="flex justify-center mb-8">
          <a href="/" class="flex items-center gap-2 text-2xl font-bold">
            <FileText className="h-8 w-8 text-primary" />
            SII Facturacion
          </a>
        </div>

        <div class="border rounded-lg p-6 bg-card shadow-sm">
          <LoginForm
            client:load
            returnUrl={returnUrl}
            initialError={error || undefined}
          />
        </div>

        <p class="mt-4 text-center text-sm text-muted-foreground">
          Sistema de Facturacion Electronica para SII Chile
        </p>
      </div>
    </div>
  </body>
</html>
